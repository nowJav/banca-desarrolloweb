<IfModule mod_rewrite.c>
  Options -Indexes
  RewriteEngine On
  RewriteBase /

  # Skip existing files and directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Route everything else to index.php
  RewriteRule ^ index.php [QSA,L]
</IfModule>
